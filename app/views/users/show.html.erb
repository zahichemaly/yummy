<% provide(:title, @user.name) %>
<div class="row" width="650px">
<div class="col-md-12 col-md-offset-3">
    <% if current_user==@user %>
        <h1>
        <%= gravatar_for @user %>
         Welcome, <%= @user.name %> !
        </h1>
        <h3><b><%= link_to "Show my recipes",  users_show_recipes_path, method: :get %></b></h3>
        <h3><b><%= link_to "Create new recipe",  users_new_recipe_path, method: :get %></b></h3>
    <% else %>
        <h1>
        <%= gravatar_for @user %>
        <%= @user.name %> 's Profile
        </h1>
    <% end %>
    </h1>
</div>
</div>
